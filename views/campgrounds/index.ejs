<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Selamat datang di Camptastic!</h1>
            <p>Petualangan baru saja dimulai. Temukan tempat kampingmu di seluruh penjuru Indonesia</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Tambah Lokasi</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Tempat kamping populer</h3>
        </div>
        <% for(i=0; i < campgrounds.length; i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail text-center">
                    <img class="img-index" src='<%= campgrounds[i]["image"] %>' alt="">
                    <div class="caption text-center">
                        <h4><%= campgrounds[i]["name"] %></h4>
                        <h5>Kota : <%= campgrounds[i]["city"] %></h5>
                    </div>
                    <p><a href='/campgrounds/<%= campgrounds[i]["name"] %>' class="btn btn-primary">More Info</a></p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>
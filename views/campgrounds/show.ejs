<% include ../partials/header %>

<h1 class="text-center"><%= campground.name %></h1>
<div class="container text-center">
    <img src="<%= campground.image %>" class="img-responsive show-page center-block" alt="">
    <h3>Lokasi: <%= campground.city %></h3>
    <p><%= campground.description %></p>
    <% campground.comments.forEach(function(comment){ %>
        <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
    <% }); %>
    <a href="/campgrounds/<%= campground.name %>/comments/new"><button class="btn btn-primary">New Comment</button></a>
    <a href="/campgrounds"><button class="btn btn-primary">Back</button></a>
</div>

<% include ../partials/footer %>
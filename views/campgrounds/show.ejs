<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Camptastic</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= campground.image %>" class="img-responsive show-page center-block" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">$ 8,7 / night</h4>
                    <h4><%= campground.name %></h4>
                    <h3>Lokasi: <%= campground.city %></h3>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= campground.name %>/comments/new"><button class="btn btn-success">New Comment</button></a>
                </div>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author %>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
            <a href="/campgrounds"><button class="btn btn-primary">Back</button></a>    
        </div>
    </div>
</div>



<% include ../partials/footer %>